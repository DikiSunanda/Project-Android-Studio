<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">


    <!-- Gambar Produk -->
    <ImageView
        android:id="@+id/imageViewProduk"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/e" />

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/Pakaian1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_gambar5"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppinsbold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/harga_produk1"
            android:textColor="@color/appbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_chat" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_love" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_share" />
    </LinearLayout>

    <!-- Deskripsi Produk -->
    <TextView
        android:fontFamily="@font/poppinsregular"
        android:id="@+id/textViewDeskripsiProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lorem_ipsum"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />
    <!-- Tombol Tambah ke Keranjang -->
    <Button
        android:id="@+id/buttonTambahKeranjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tambah ke Keranjang5"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@android:color/white"
        android:background="@color/appbar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
